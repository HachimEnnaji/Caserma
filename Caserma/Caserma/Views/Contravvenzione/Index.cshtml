@model Caserma.Models.Contravvenzione

@{
    ViewBag.Title = "Index";
}


@{
    ViewBag.Title = "Contravvenzione";
}

<h2 class="display-3 text-capitalize text-center">Contravvenzioni</h2>
<div class="row">
    <div class="col-md-6">
        <button style="width:100%" class="btn btn-primary mb-2" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            Contravvenzioni raggruppate per trasgressore
        </button>
        <div class="collapse" id="collapseExample">
            <div class="card card-body img-rounded  table-bordered mb-1" style="background-color:white;">
                @{
                    Html.RenderAction("_ContravvenzioniPerTrasgressore", "Contravvenzione");
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <button style="width:100%" class="btn btn-primary mb-2" type="button" data-toggle="collapse" data-target="#collapseExample1" aria-expanded="false" aria-controls="collapseExample">
            Punti decurtati per ogni trasgressore
        </button>
        <div class="collapse" id="collapseExample1">
            <div class="card card-body img-rounded  table-bordered mb-1 " style="background-color:white;">
                @{
                    Html.RenderAction("_PuntiDecurtatiPerOgniTrasgressore", "Contravvenzione");
                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <button style="width:100%" class="btn btn-primary mb-2" type="button" data-toggle="collapse" data-target="#collapseExample2" aria-expanded="false" aria-controls="collapseExample">
            Contravvenzioni che superano i 10 punti
        </button>
        <div class="collapse" id="collapseExample2">
            <div class="card card-body img-rounded  table-bordered mb-1 " style="background-color:white;">
                @{
                    Html.RenderAction("_ContravvenzioniSuperano10Punti", "Contravvenzione");
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <button style="width:100%" class="btn btn-primary mb-2" type="button" data-toggle="collapse" data-target="#collapseExample3" aria-expanded="false" aria-controls="collapseExample">
            Contravvenzioni con importo maggiore a 400€
        </button>
        <div class="collapse" id="collapseExample3">
            <div class="card card-body img-rounded  table-bordered mb-1 " style="background-color:white;">
                @{
                    Html.RenderAction("_ContravvenzioniImportoMaggiore400", "Contravvenzione");
                }
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>



