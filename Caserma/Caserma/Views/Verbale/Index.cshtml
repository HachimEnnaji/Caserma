@model IEnumerable<Caserma.Models.Verbale>

@{
    ViewBag.Title = "Verbali";
}

<h2 class="display-3 text-capitalize text-center">Verbali</h2>

<button class="btn btn-outline-success mb-2" onclick="location.href='@Url.Action("Archivia")'"><i class="fa-solid fa-plus"></i></button>


<table class="table table-striped text-center">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.NominativoAgente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataViolazione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IndirizzoViolazione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataTrascrizioneVerbale)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Importo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DecurtamentoPunti)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_Violazione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoViolazione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeCognomeTrasgressore)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @Html.HiddenFor(modelItem => item.ID_Verbale)
            @Html.HiddenFor(modelItem => item.ID_Anagrafica)
            <td>
                @Html.DisplayFor(modelItem => item.NominativoAgente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataViolazione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IndirizzoViolazione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataTrascrizioneVerbale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Importo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DecurtamentoPunti)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Violazione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoViolazione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCognomeTrasgressore)
            </td>
        </tr>
    }

</table>
